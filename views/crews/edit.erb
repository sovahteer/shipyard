<h2>Edit <%= @crew.full_name %></h2>
<form method="POST" action="/crews/<%= @crew.id %>">
  <div class="form-wrapper">
    
    <div class="form-el">
      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" id="first_name" value="<%= @crew.first_name %>"/>
    </div>

    <div class="form-el">
      <label for="last_name">Last Name:</label>
      <input type="text" name="last_name" id="last_name" value="<%= @crew.last_name %>"/>
    </div>

    <div class="form-el">
      <label for="role">Role:</label>
      <input type="text" name="role" id="role" value="<%= @crew.role %>"/>

     <div class="form-el">
      <label for="ship_id">Assigned to:</label>
      <% if @crew.ship_id %>
        <select name="ship_id" id="ship_id" value="<%= @crew.ship_id %>">
      <% else %>
        <select name="ship_id" id="ship_id">
      <% end %>
      <option value="--">--</option>
        <% for ship in @ships %>
          <option value=<%= ship.id %> <%= ship.id == @crew.ship_id ? "selected" : "" %>><%= ship.ship_name %></option>
        <% end %>
      </select>
      <% if @crew.captain_id %>
      <input type="hidden" id="captain_id" name="captain_id" value="@crew.captain_id"/>
      <% end %>
    </div>
    </br>
    <div class="form-el">
      <input type="submit" value="Apply Changes"/>
    </div>

  </div>
</form>