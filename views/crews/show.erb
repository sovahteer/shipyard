
<div class="crew-show">
    <ul class= "cards">            
        <li class="card">        
            <ul>
                <li><img src="" alt="placeholder">
                <li><h2><%= @crew.full_name %></h2></li>
                <li>Assigned to: <% if @crew.ship_id %>
                                    <% @ship = @crew.ship %>
                                    <% if @ship.ship_name %>
                                        <%= @ship.ship_name %>
                                    <% else %>Nameless
                                    <% end %>
                                <% else %>None
                                <% end %></li>
                <li>Ship's Captain:  <% if @crew.captain_id %>
                                        <%= @crew.captain.full_name %>
                                    <% else %>None
                                    <% end %></li>
                <li>Role: <%= @crew.role %></li>

                <li><a href="/crews/<%= @crew.id %>/edit">Edit</a></li>
                <li><form action="/crews/<%= @crew.id %>/delete" method="POST"><input type="submit" value="Delete"></form></li>
                <li><a href="/crews">Return</a></li>
            </ul>
        </li>
    </ul>
</div>