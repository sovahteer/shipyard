<div class="search-wrapper">
<form method="POST" action="/">
  <p>Search for...</p>
   <input id="query" name="query" type="text" placeholder="Search...">
  <button type="submit">
    <i class="fa fa-search">...</i>
  </button>
</div>
</form>

<div class="results">
    <% for ship in @ships %>
       <h1><%= ship['model'] %></h1>
       <ul>
          <li>Class: <%= ship['class'] %></li>
          <li>Status: <%= ship['sales_status']%></li>
          <li><a href="/ships/<%= ship['id'] %>">Show Details</a></li>
        </ul>
    <% end %>

    <% for captain in @captains %>
      <h1><%= captain['first_name']+' '+captain['last_name'] %></h1>
        <% @captain = Captain.find(captain['id']) %>
      <ul>
        <% if @captain.ship_id %>
          <li>Ship: <%= @captain.ship.ship_name %></li>
        <% end %>
      </br>
      <li><a href="/captains/<%= captain['id'] %>">Show Details</a></li>
      </ul>
<% end %>

    <% for crew in @crews %>
       <% if crew['last_name'] %>
       <h1><%= crew['first_name']+' '+crew['last_name'] %></h1>
       <% else %>
       <h1><%= crew['first_name'] %></h1>
       <% end %>
        <ul>
        <li>Assigned to: <% if crew['ship_id'] %>
                        <%= Ship.find(crew['ship_id']).ship_name %>
                    <% else %>None
                    <% end %></li>
        </br>
        <li>Role: <%= crew['role']%></li>
        </br>
        <li><a href="/crews/<%= crew['id'] %>">Show Details</a></li>
        </ul>
    <% end %>
</div>
